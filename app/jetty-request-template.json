{
    "template": "logstash-*",
    "settings": {
      "index" : {
        "number_of_replicas": 0,
        "refresh_interval": "30s"
      }
    },
    "mappings": {
        "_default_": {
            "_all": {"enabled": false},
            "date_detection": false,
            "dynamic_templates": [
                {"string_fields": {
                    "match": "*",
                    "match_mapping_type": "string",
                    "mapping": {"type": "string", "index": "not_analyzed"}
                }},
                {"long_fields": {
                    "match": "*",
                    "match_mapping_type": "long",
                    "mapping": {"type": "long", "norms": {"enabled": false}}
                }},
                {"integer_fields": {
                    "match": "*",
                    "match_mapping_type": "integer",
                    "mapping": {"type": "integer", "norms": {"enabled": false}}
                }}
            ],
            "properties": {
                "@timestamp": {"type": "date", "format": "dateOptionalTime"},
                "@version": {"type": "integer", "norms": {"enabled": false}},
                "agent": {"type": "string", "index": "not_analyzed"},
                "bytes": {"type": "long", "norms": {"enabled": false}},
                "host": {"type": "string", "index": "not_analyzed"},
                "clientip": {"type": "ip", "norms": {"enabled": false}},
                "httpversion": {"type": "string", "index": "not_analyzed"},
                "referrer": {"type": "string", "index": "not_analyzed"},
                "request": {"type": "string", "index": "not_analyzed"},
                "path": {"type": "string", "index": "not_analyzed"},
                "response": {"type": "integer", "norms": {"enabled": false}},
                "response_time": {"type": "integer", "norms": {"enabled": false}},
                "geoip": {
                    "type": "object", "dynamic": true,
                    "properties": {"location": {"type": "geo_point"}}
                },
                "verb": {"type": "string", "index": "not_analyzed"}
            }
        }
    }
}
